@model ContactMessage

<form asp-action="Index" method="post" class="contact-form">

    @if (TempData["Success"] != null)
    {
        <div style="color:green; margin-bottom:15px">
            @TempData["Success"]
        </div>
    }

    <div class="form-row">
        <div class="form-group">
            <label>الاسم الكامل</label>
            <input asp-for="FullName" placeholder="اسمك الكريم" />
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>البريد الإلكتروني</label>
            <input asp-for="Email" placeholder="example@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group">
        <label>الموضوع</label>
        <input asp-for="Subject" placeholder="موضوع رسالتك" />
        <span asp-validation-for="Subject" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>الرسالة</label>
        <textarea asp-for="Message" placeholder="اكتب رسالتك هنا..."></textarea>
        <span asp-validation-for="Message" class="text-danger"></span>
    </div>

    <button type="submit" class="send-btn">
        إرسال الرسالة <i class="fa-solid fa-paper-plane"></i>
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
